%h1 Listing posts
= paginate @posts
%hr/
= link_to "New post", new_post_path
%hr/
- @posts.each do |post|
  %h3= post.title.html_safe
  %p= post.body.html_safe
  = link_to "Edit Post", edit_post_path(post)
  = link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }
  - if post != @posts.last
    %hr/
